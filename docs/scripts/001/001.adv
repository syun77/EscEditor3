def outlet1
{
	if($ITEM == ITEM_USB_ADAPTER_CABLE) {
		// 電源ON
		%USB_POWER_ON = true
		ITEM_DEL(ITEM_USB_ADAPTER_CABLE)
		":ケーブルを接続した"
		return
	}

	if(%USB_POWER_ON == false) {
		":コンセントがある"
		return
	}
	":ケーブルがつながって電力が供給されている"
}

