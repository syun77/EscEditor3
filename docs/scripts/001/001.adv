def input
{
	if(%USB_POWER_ON == false) {
		":電源がついていない"
		return
	}

	// あらがた
	// いりぎち
	// うるぐつ
	// えれげて
	// おろごと
	PIC_INPUT(2, 10, 4)
	if($10 == 1121) { // い(1)り(1)ぐ(2)ち(1)
		%UNLOCK_DOOR = true
		":扉が開いた"
		return
	}
	else {
		":正しくないようだ"
	}
}

